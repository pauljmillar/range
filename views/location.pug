extends layout

block content
  //.pmainbanner.mdl-typography--text-center(style='background-image: url(/images/' + location.mainimage + ');')
  .pmainbanner.mdl-typography--text-center(style='background-image: url(/uploads/' + location.locationuserid + '/' + location.mainimage + ');')
    .demo-back
      a.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon(href='/locations', title='all locations', role='button', style='color:white')
        i.material-icons(role='presentation') arrow_back
    .logo-font.android-slogan(style='color:white')   #{location.name}
    .logo-font.android-sub-slogan(style='color:white') #{location.hours}
    .logo-font.android-sub-slogan(style='color:white') #{location.seats - location.seatsTaken} Seats Available
    //
      div class="logo-font android-create-character">
      <a href=""><img src="images/andy.png"> create your android character</a>
      </div
    a(href='#')
      button.android-fab.mdl-button.mdl-button--colored.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
        i.material-icons place


  //.android-screens
    .android-wear.android-screen
      a.android-image-link
        i.material-icons(style='font-size: 30px') local_parking
      a.android-link.mdl-typography--font-regular.mdl-typography--text-uppercase parking 
    .android-wear.android-screen
      a.android-image-link
        i#tt2.material-icons(style='font-size: 30px') access_time
      .mdl-tooltip(data-mdl-for='tt2')
        | Flexible Hours
    .android-wear.android-screen
      a.android-image-link
        i.material-icons(style='font-size: 30px') local_dining
      a.android-link.mdl-typography--font-regular.mdl-typography--text-uppercase(href='') food available
    .android-wear.android-screen
      a.android-image-link
        i.material-icons(style='font-size: 30px') local_cafe
      a.android-link.mdl-typography--font-regular.mdl-typography--text-uppercase(href='') free beverage
    .android-wear.android-screen
      a.android-image-link
        i.material-icons(style='font-size: 30px') directions_transit
      a.android-link.mdl-typography--font-regular.mdl-typography--text-uppercase(href='') public transport
    .android-wear.android-screen
      a.android-image-link
        i.material-icons(style='font-size: 30px') group_work
      a.android-link.mdl-typography--font-regular.mdl-typography--text-uppercase(href='') group workspace avail


  if (user)
    section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
      .mdl-card.mdl-cell.mdl-cell--12-col
        .mdl-card__supporting-text
          h4 Regular Hours: #{location.hours}
          h4.mdl-cell.mdl-cell--12-col.mdl-typography--font-thin #{location.seats} Total Seats,  #{location.seatsTaken} Seats Occupied
          h6 Announcement: #{location.announcement}           
        .mdl-card__actions
          a.mdl-button(href='/login') Check In Now
      button#btn3.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon
        i.material-icons more_vert
      ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right(for='btn3')
        li.mdl-menu__item Lorem
        li.mdl-menu__item(disabled='') Ipsum
        li.mdl-menu__item Dolor
      
  section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
    .mdl-card.mdl-cell.mdl-cell--12-col
      .mdl-card__supporting-text.mdl-grid.mdl-grid--no-spacing
        h4.mdl-cell.mdl-cell--12-col.mdl-typography--font-thin #{location.description}
        .section__circle-container.mdl-cell.mdl-cell--2-col.mdl-cell--1-col-phone
          .section__circle-container__circle.mdl-color--primary
        .section__text.mdl-cell.mdl-cell--10-col-desktop.mdl-cell--6-col-tablet.mdl-cell--3-col-phone
          h5 #{location.feature1}
          |  #{location.feature1desc}                     
        .section__circle-container.mdl-cell.mdl-cell--2-col.mdl-cell--1-col-phone
          .section__circle-container__circle.mdl-color--primary
        .section__text.mdl-cell.mdl-cell--10-col-desktop.mdl-cell--6-col-tablet.mdl-cell--3-col-phone
          h5 #{location.feature2}
          |  #{location.feature2desc}                     
          //a(href='#') proident minim
          //| .
        .section__circle-container.mdl-cell.mdl-cell--2-col.mdl-cell--1-col-phone
          .section__circle-container__circle.mdl-color--primary
        .section__text.mdl-cell.mdl-cell--10-col-desktop.mdl-cell--6-col-tablet.mdl-cell--3-col-phone
          h5 #{location.feature3}
          |  #{location.feature3desc}                     
      .mdl-card__actions
        a.mdl-button(href='/login') Check In
        
  if (location.longdescription)
    section.section--center.mdl-grid
      h4.mdl-cell.mdl-cell--12-col.mdl-typography--font-thin !{location.longdescription}  
        
  if (location.image3)
    section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
      .mdl-card.mdl-cell.mdl-cell--12-col(style='background: url(/uploads/' + location.locationuserid + '/' + location.image3 + ') center/cover;')

  if (location.image4)
    section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
      .mdl-card.mdl-cell.mdl-cell--12-col(style='background: url(/uploads/' + location.locationuserid + '/' + location.image4 + ') center/cover;')

  if (location.image5)
    section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
      .mdl-card.mdl-cell.mdl-cell--12-col(style='background: url(/uploads/' + location.locationuserid + '/' + location.image5 + ') center/cover;')

  section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.ptop
    .mdl-card.mdl-cell.mdl-cell--12-col
      .mdl-card__supporting-text
        h4 #{location.name}
        h4.mdl-typography--font-thin #{location.address}  #{location.city}, #{location.state}
        h6 #{location.phone}           
        a.h6(href=location.website) #{location.website}           
        h6 #{location.email}           
      .mdl-card__actions
        a.mdl-button(href='mailto:' + location.email) Contact Us

  section.section--footer.mdl-color--white.mdl-grid
    if (location.offer1)
      .section__circle-container.mdl-cell.mdl-cell--2-col.mdl-cell--1-col-phone
        .section__circle-container__circle.mdl-color--accent.section__circle--big
      .section__text.mdl-cell.mdl-cell--4-col-desktop.mdl-cell--6-col-tablet.mdl-cell--3-col-phone
        h5 #{location.offer1}  
        |  !{location.offer1desc}  
    if (location.offer2)
      .section__circle-container.mdl-cell.mdl-cell--2-col.mdl-cell--1-col-phone
        .section__circle-container__circle.mdl-color--accent.section__circle--big
      .section__text.mdl-cell.mdl-cell--4-col-desktop.mdl-cell--6-col-tablet.mdl-cell--3-col-phone
        h5 #{location.offer2}  
        |  !{location.offer2desc}  


