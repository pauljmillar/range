extends ../modallayout

block content
  .mdl-grid
    .mdl-card.mdl-shadow--16dp.signup-center.signup-spacing-h--40px
      .mdl-card__title.mdl-color--green-500(style='padding-top:120px')
        h2.mdl-card__title-text.mdl-color-text--white Log in to Range
      .mdl-card__supporting-text.mdl-grid
        // b class="mdl-color-text--accent">Error message goes here</b
        //include ../partials/flash
        form(method='POST', action='/login')
          input(type='hidden', name='_csrf', value=_csrf)
          // input(type='hidden', name='action', value='login')
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col
            label.mdl-textfield__label.mdl-color-text--grey(for='email') Email
            input#email.mdl-textfield__input(type='email', name='email')
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col
            label.mdl-textfield__label.mdl-color-text--grey(for='password') Password
            input#password.mdl-textfield__input(type='password', name='password')
          .mdl-cell.mdl-cell--12-col.send-button(align='right')
            a#login.mdl-button.mdl-js-button.mdl-button--accent(href='/forgot')
              | forgot password?
            button#login.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-color--accent.mdl-color-text--accent-contrast(type='submit')
              | Log in