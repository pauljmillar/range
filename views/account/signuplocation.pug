extends ../modallayout

block content
  .mdl-grid
    .mdl-card.mdl-shadow--16dp.signup-center.signup-spacing-h--40px
      .mdl-card__title.mdl-color--green-500(style='padding-top:120px')
        h2.mdl-card__title-text.mdl-color-text--white Create Range Account
      .mdl-card__supporting-text.mdl-grid
        // b class="mdl-color-text--accent">Error message goes here</b
        include ../partials/flash
        form(method='POST', action='/signup')
          input(type='hidden', name='_csrf', value=_csrf)
          input(type='hidden', name='isLocation', value='true')
          // input(type='hidden', name='action', value='signup')
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col
            label.mdl-textfield__label.mdl-color-text--grey(for='email') Email
            input#email.mdl-textfield__input(type='email', name='email')
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col
            label.mdl-textfield__label.mdl-color-text--grey(for='password') Password
            input#password.mdl-textfield__input(type='password', name='password', pattern='((?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%]).{6,20})')
            span.mdl-textfield__error
              | 6-20 characters with at least a digit, lowercase and uppercase letters,
              | and special symbol in @#$%
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col
            label.mdl-textfield__label.mdl-color-text--grey(for='confirmPassword') Confirm Password
            input#confirmPassword.mdl-textfield__input(type='password', name='confirmPassword')
          .mdl-cell.mdl-cell--12-col.send-button(align='right')
            a#login.mdl-button.mdl-js-button.mdl-button--accent(href='/login')
              | have account?
            button#login.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-color--accent.mdl-color-text--accent-contrast(type='submit')
              | Sign Up